<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="userDataList"
            type="com.example.sfoide.entities.UserData.Result" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_image"
                bindImageUrl="@{userDataList.picture.thumbnail.toString()}"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tv_user_name_age"
                    addInformation="@{userDataList}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="1asf123 (63)" />

                <TextView
                    android:id="@+id/tv_email"
                    addEmailImoji="@{userDataList.email.toString()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="example@example.com" />

                <TextView
                    android:id="@+id/tv_home_number"
                    addCellImoji="@{userDataList.cell.toString()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="939-381-1920" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    addPhoneImoji="@{userDataList.phone.toString()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="011-1234-5678" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
